{
  "compilerOptions": {
    "downlevelIteration": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "module": "commonjs",
    "target": "ES2018",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "baseUrl": "src"
  },
  "include": [
    "src",
    "scripts"
  ]
}
